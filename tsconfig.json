{
  "compilerOptions": {
    "noEmitOnError": true,
    "declaration": true,
    "removeComments": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,

    "strict": true,

    "noUnusedParameters": true,
    "noUnusedLocals": true,

    "esModuleInterop": true,

    "skipLibCheck": true,
    "importHelpers": true,
    "target": "es5",
    "lib": ["dom", "es2016"],
    "rootDir": "src",
    "outDir": "build",
    "moduleResolution": "node",
    "jsx": "react",
    "baseUrl": ".",
    "paths": {
      "@implydata/caladan": ["src/index.ts"]
    }
  },
  "include": [
    "src/index.ts",
    "src/**/*.spec.tsx",
    "src/**/*.e2e.ts",
    "src/**/*.e2e.tsx",
    "src/**/*.demo.tsx"
  ],
  "exclude": ["node_modules", "platforms"]
}
